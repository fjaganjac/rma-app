<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <EditText
        android:id="@+id/set_age_edittext"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:hint="enter your age"
        android:textColorHint="#757575"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/game_list"
        app:layout_constraintEnd_toStartOf="@id/set_age_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_query_edittext" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_game_list"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="17"
        tools:listitem="@layout/item_game" />

    <Button
        android:id="@+id/set_age_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_forward_24"
        app:iconGravity="textStart"
        app:iconPadding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/game_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toEndOf="@+id/set_age_edittext"
        app:layout_constraintTop_toBottomOf="@+id/sort_button"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/search_query_edittext"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:hint="search"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toStartOf="@id/sort_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_search_24"
        app:iconGravity="textStart"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sort_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_list"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:itemCount="17"
        tools:listitem="@layout/item_game" />

    <Button
        android:id="@+id/sort_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_sort_24"
        app:iconGravity="textStart"
        app:iconPadding="1dp"
        app:layout_constraintEnd_toStartOf="@id/search_button"
        app:layout_constraintStart_toEndOf="@+id/search_query_edittext"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>